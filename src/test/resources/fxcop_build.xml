<?xml version="1.0"?>
<project name="FxCop Static Analysis" default="fxcop" basedir=".">

    <!-- FxCop analysis parameters -->
    <property name="src.dir" value="src"/>
    <property name="dest.dir" value="dest"/>
    <property name="fxcop.dir" value="src\test\resources\tools\FxCop\FxCopCmd.exe"/>
    <property name="ruleset.path" value="ruleset.path"/>

    <target name="fxcop">
        <exec executable="cmd.exe">
            <arg value="/c"/>
            <arg value="${fxcop.dir}"/>
            <arg value="/file:${src.dir}"/>
            <arg value="/rs:+${ruleset.path}"/>
            <arg value="/out:${dest.dir}"/>
            <arg value="/summary"/>
        </exec>
    </target>

</project>